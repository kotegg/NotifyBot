@{
	ViewData["Title"] = "Отписка от YouTube";
}

<h1>Отписка от YouTube</h1>

<p>@ViewBag.Message</p>

@if (ViewBag.Subscriptions != null)
{
	<form method="post" action="/YouTube/ConfirmUnsubscriptions">
		<table>
			<thead>
				<tr>
					<th>Название канала</th>
					<th>Выбор</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var subscription in ViewBag.Subscriptions)
				{
					<tr>
						<td>@subscription.ChannelName</td>
						<td>
							<input type="checkbox" name="channelIds" value="@subscription.ChannelId" />
						</td>
					</tr>
				}
			</tbody>
		</table>
		<button type="submit">Отписаться</button>
	</form>
}
else
{
	<p>У вас нет активных подписок.</p>
}

<div class="navigation-panel">
	<a href="/YouTube/YouTube" class="nav-icon" title="Назад">
		<i class="fas fa-arrow-left"></i>
	</a>
	<a href="/Home/Index" class="nav-icon" title="Главное меню">
		<i class="fas fa-home"></i>
	</a>
</div>

